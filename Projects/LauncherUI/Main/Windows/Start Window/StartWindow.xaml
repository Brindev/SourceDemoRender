<Window x:Class="LauncherUI.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherUI"
        mc:Ignorable="d"
        Title="SDR Launcher UI" Height="360" Width="640" WindowStartupLocation="CenterScreen" MinWidth="640" MinHeight="360">
    <Grid Margin="10">
		<TextBox x:Name="StatusText" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="15" TextWrapping="Wrap" Margin="0,0,0,42" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
			<Button x:Name="UpgradeButton" Margin="10,0,0,0" Height="32" Content="Upgrade" Width="100" FontSize="15" IsEnabled="False" Click="UpgradeButton_Click"/>
			<Button x:Name="StartButton" Margin="10,0,0,0" Height="32" Content="Start" Width="100" FontSize="15" IsEnabled="False" Click="StartButton_Click"/>
		</StackPanel>
	</Grid>
</Window>
